---
import { getNews } from "../lib/microcms";

// ビルド時にデータを取得 (SSG)
const response = await getNews({ fields: ["id", "title", "content", "publishedAt"] });
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>お知らせ一覧</title>
    <style>
      body {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        font-family: system-ui, -apple-system, sans-serif;
        line-height: 1.6;
      }
      h1 {
        color: #333;
        border-bottom: 2px solid #333;
        padding-bottom: 10px;
      }
      article {
        margin: 30px 0;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #f9f9f9;
      }
      article h2 {
        margin-top: 0;
        color: #2c5282;
      }
      time {
        color: #666;
        font-size: 0.9em;
      }
      article > div {
        margin-top: 15px;
      }
      .back-link {
        display: inline-block;
        margin-top: 24px;
        color: #2563eb;
        text-decoration: none;
      }
      .back-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <h1>お知らせ一覧</h1>
    {response.contents.map((news) => (
      <article>
        <h2>{news.title}</h2>
        <time>{news.publishedAt.slice(0, 10)}</time>
        <div set:html={news.content} />
      </article>
    ))}
    <a class="back-link" href="/">トップページへ戻る</a>
  </body>
</html>
